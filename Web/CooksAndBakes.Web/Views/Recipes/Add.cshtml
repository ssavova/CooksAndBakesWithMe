@model CooksAndBakes.Web.ViewModels.Recipes.RecipeCreateInputModel

@{
    this.ViewData["Title"] = "Create Recipe";
    var categories = Model.Categories.Select(c => new SelectListItem(c.Title, c.DefaultImageUrl));
}

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>

﻿<h1 class="text-center mt-2">@this.ViewData["Title"]</h1>
<div class="row mt-4 mb-4">
    <div id="card" class="card col-6 col-lg-3 game-card h-100 m-auto ">
        <img id="card-image"
             src="https://www.impact-media.be/wp-content/uploads/2019/09/placeholder-1-e1533569576673-960x960.png"
             class="card-img-top img-fluid card-image mt-2">
        <div class="card-body">
            <h5 id="card-name" class="card-title text-center" data-toggle="tooltip" data-placement="bottom"
                title="Description:<br>Placeholder.">
                Placeholder
            </h5>
            <ul class="list-group list-group-flush">
                <li id="card-keyword" class="list-group-item text-center">Placeholder</li>
                <li class="list-group-item text-center" id="complexity">
                    <img src="~/images/chef.png" id="h1" />
                    <img src="~/images/chef.png" id="h2" />
                    <img src="~/images/chef.png" id="h3"/>
                    <img src="~/images/chef.png" id="h4"/>
                    <img src="~/images/chef.png" id="h5"/>
                </li>
            </ul>
        </div>
    </div>
    <form class="col-6 col-lg-9" method="post">
        <div class="form-group">
            <label asp>Title</label>
            <input name="name" type="text" class="form-control" id="name-input">
        </div>

        <div class="form-group">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" asp-items="categories" class="form-control" id="category-selection"></select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Level">Complexity (between 1 and 5)</label>
            <input  asp-for="Level" class="form-control" id="level-of-complexity" min="1" max="5" />
            <span asp-validation-for="Level" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="attack-input">Attack</label>
            <input name="attack" type="number" class="form-control" id="attack-input">
        </div>
        <div class="form-group">
            <label for="health-input">Health</label>
            <input name="health" type="number" class="form-control" id="health-input">
        </div>
        <div class="form-group">
            <label for="description-input">Description</label>
            <textarea name="description" class="form-control" id="description-input"></textarea>
        </div>
        <button type="submit" class="btn btn-block btn-primary">Create</button>
    </form>
</div>

<script>

    $("#image-input").focusout(function () {
        let category = $("#image-input").text();

        $('#card-keyword').text(category);
    })
</script>