@model CooksAndBakes.Web.ViewModels.Categories.AllCategoriesViewModel

<hr class="customizeLine"/>
<nav id="default" class="navbar navbar-expand-lg navbar-dark mb-2">
    <div class="container ">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div  class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
            <ul class="navbar-nav flex-grow-1  mx-auto text-center ">
                @foreach (var name in Model.Categories)
                {
                    <li class="nav-item ">
                        <a id="categoryMenu" class="nav-link text-dark font-weight-bold " href="Categories/GetAll?Id=@name.Id">@name.Title</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>
<hr class="customizeLine" />


